{{!< default}}

{{!-- The tag above means: insert everything in this file
into the {body} of the default.hbs template --}}

{{> site-header}}

{{!-- Everything inside the #post tags pulls data from the post --}}
{{#post}}
  {{> post-header}}
  <main class="main-content">
    <div class="container-sm">
      <nav class="d-none d-md-block pl-0 post-content-main-breadcrumb" aria-label="breadcrumb">
        <ol class="px-3 py-0 px-md-0 breadcrumb">
          <li class="breadcrumb-item"><a href="{{@site.url}}">{{@site.title}}</a></li>
          <li class="breadcrumb-item"><a href="{{primary_tag.url}}">{{primary_tag.name}}</a></li>
          <li class="breadcrumb-item active" aria-current="page">{{title}}</li>
        </ol>
      </nav>
      <div class="row post-content-main">
        <article class="{{post_class}} col-12 col-sm-12 col-md-9 col-lg-9 col-xl-9 px-0 borderbox post-content post-content-use-blank article-main">
          {{content}}
        </article>
        <div class="d-none d-md-block col-12 col-sm-12 col-md-3 col-lg-3 col-xl-3 px-0 article-toc-area">
          <nav id="site-toc" data-toggle="toc" class="sticky-top article-toc-nav">
            <div class="toc-title">文章目录：</div>
          </nav>
        </div>
      </div>
      {{> post-tools}}
      {{> post-copyright}}
      {{> post-footer-author}}
      {{> post-read-next}}
      {{> post-comment}}
    </div>
  </main>
{{/post}}
