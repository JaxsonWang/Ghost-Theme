<section class="main-hero">
  {{> header-background background=feature_image}}
  <div class="main-hero-bg {{#if feature_image}}responsive-header-img{{else}}no-image{{/if}}"></div>
  <div class="d-flex flex-column align-content-center justify-content-center main-hero-content">
    <div class="text-center main-hero-content-title">{{title}}</div>
    <div class="text-center main-hero-content-description">
      {{#foreach authors}}{{name}}{{/foreach}}
      <span class="date-divider">/</span>
      <time datetime="{{date format="YYYY-MM-DD"}}">{{date format="YYYY-MM-DD"}}</time>
      <span class="date-divider">/</span>
      {{#if primary_tag}}{{#primary_tag}}{{name}}{{/primary_tag}}{{/if}}
      <span class="date-divider">/</span>
      <span id="{{url}}" class="leancloud-visitors main-hero-content-description-visitors" data-flag-title="{{title}}">
        阅读量
        <a class="leancloud-visitors-count"></a>
      </span>
    </div>
  </div>
  {{> site-hero-waves-area}}
</section>
