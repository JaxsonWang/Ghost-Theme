<nav class="pomelo-pagination flex justify-center items-center">
  <div class="hidden" aria-hidden="true">
    <span class="pomelo-pagination-current-page">{{page}}</span>
    <span class="pomelo-pagination-total-pages">{{pages}}</span>
    <span class="pomelo-pagination-limit-pages">{{limit}}</span>
  </div>
  <ul class="pomelo-pagination-wrapper flex justify-center items-center">
    {{#if prev}}
      <li class="pomelo-pagination-page-item">
        <a href="{{page_url prev}}" class="pomelo-pagination-page-link">
          {{> "icons/arrow-left"}}
        </a>
      </li>
    {{/if}}
    {{#if next}}
      <li class="pomelo-pagination-page-item">
        <a href="{{page_url next}}" class="pomelo-pagination-page-link">
          {{> "icons/arrow-right"}}
        </a>
      </li>
    {{/if}}
  </ul>
</nav>
