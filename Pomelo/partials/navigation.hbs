{{#if isSecondary}}
  {{#if @site.secondary_navigation}}
    <ul class="pomelo-footer-navbar">
      {{#foreach navigation}}
        <li class="{{link_class for=(url) class=(concat "nav-" slug)}} pomelo-footer-menu-li mx-2">
          <a href="{{url absolute="true"}}" class="pomelo-footer-menu-link{{#if current}} active{{/if}}">{{label}}</a>
        </li>
      {{/foreach}}
    </ul>
  {{/if}}
{{else}}
  <ul class="pomelo-header-navbar">
    {{#foreach navigation}}
      <li class="{{link_class for=(url) class=(concat "nav-" slug)}} pomelo-header-menu-li mr-4">
        <a href="{{url absolute="true"}}" class="pomelo-header-menu-link{{#if current}} active{{/if}}">{{label}}</a>
      </li>
    {{/foreach}}
  </ul>
{{/if}}


