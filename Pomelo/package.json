{
  "name": "pomelo",
  "description": "a ghost theme",
  "type": "module",
  "keywords": [
    "ghost",
    "theme",
    "ghost-theme"
  ],
  "engines": {
    "ghost": ">=5.0.0"
  },
  "version": "1.0.4",
  "license": "MIT",
  "author": {
    "name": "Jaxson Wang",
    "email": "i@iiong.com",
    "url": "https://iiong.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/JaxsonWang/Ghost-Theme/tree/master/Pomelo"
  },
  "screenshots": {
    "desktop": "assets/screenshot-desktop.jpg",
    "mobile": "assets/screenshot-mobile.jpg"
  },
  "scripts": {
    "dev": "rollup -c -w --environment NODE_ENV:development",
    "build": "rollup -c --environment NODE_ENV:production",
    "ncu": "npx npm-check-updates -u"
  },
  "devDependencies": {
    "@babel/core": "^7.22.19",
    "@babel/plugin-transform-runtime": "^7.22.15",
    "@babel/preset-env": "^7.22.15",
    "@rollup/plugin-babel": "^6.0.3",
    "@rollup/plugin-commonjs": "^25.0.4",
    "@rollup/plugin-eslint": "^9.0.4",
    "@rollup/plugin-node-resolve": "^15.2.1",
    "@tailwindcss/typography": "^0.5.10",
    "autoprefixer": "^10.4.15",
    "cssnano": "^6.0.1",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "lint-staged": "^14.0.1",
    "postcss": "^8.4.29",
    "postcss-import": "^15.1.0",
    "prettier": "^3.0.3",
    "rollup": "3.29.1",
    "rollup-plugin-copy": "^3.5.0",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-terser": "^7.0.2",
    "tailwindcss": "3.3.3"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js}": [
      "vue-cli-service lint",
      "git add"
    ]
  },
  "config": {
    "posts_per_page": 15,
    "image_sizes": {
      "xxs": {
        "width": 30
      },
      "xs": {
        "width": 100
      },
      "s": {
        "width": 300
      },
      "m": {
        "width": 600
      },
      "l": {
        "width": 1000
      },
      "xl": {
        "width": 2000
      }
    },
    "card_assets": true,
    "custom": {
      "hero_one": {
        "type": "text",
        "default": "永远年轻，永远热泪盈眶",
        "group": "sitewide"
      },
      "custom_font_family_ttf_url": {
        "type": "text",
        "default": "https://github.rc1844.workers.dev/JaxsonWang/jaxsonwang.github.io/raw/master/assets/PuHuiTi.ttf",
        "group": "sitewide"
      },
      "icp_name": {
        "type": "text",
        "default": "苏ICP备15050739号",
        "group": "sitewide"
      },
      "gongan_beian_name": {
        "type": "text",
        "default": "苏公网安备32010402000196号",
        "group": "sitewide"
      },
      "gongan_beian_url": {
        "type": "text",
        "default": "http://www.beian.gov.cn/portal/registerSystemInfo?recordcode=32010402000196",
        "group": "sitewide"
      },
      "footer_url_name": {
        "type": "text",
        "default": "百度统计",
        "group": "sitewide"
      },
      "footer_url_url": {
        "type": "text",
        "default": "https://tongji.baidu.com/web/welcome/ico?s=075de8ed5c2bfb5f678b1a620749aee4",
        "group": "sitewide"
      },
      "footer_one": {
        "type": "text",
        "default": "只争朝夕，不负韶华。",
        "group": "sitewide"
      },
      "comments_twikoo_env_id": {
        "type": "text",
        "default": "",
        "group": "post"
      },
      "name_in_the_about_me_page": {
        "type": "text",
        "default": "",
        "group": "post"
      },
      "email_in_the_about_me_page": {
        "type": "text",
        "default": "",
        "group": "post"
      },
      "position_in_the_about_me_page": {
        "type": "text",
        "default": "",
        "group": "post"
      }
    }
  }
}
