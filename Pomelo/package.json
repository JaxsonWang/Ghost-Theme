{
  "name": "pomelo",
  "description": "a ghost theme",
  "keywords": [
    "ghost",
    "theme",
    "ghost-theme"
  ],
  "engines": {
    "ghost": ">=5.0.0"
  },
  "version": "0.0.1",
  "license": "MIT",
  "author": {
    "name": "Jaxson Wang",
    "email": "i@iiong.com",
    "url": "https://iiong.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/JaxsonWang/Ghost-Theme/tree/master/2022-Pomelo"
  },
  "screenshots": {
    "desktop": "assets/screenshot-desktop.jpg",
    "mobile": "assets/screenshot-mobile.jpg"
  },
  "scripts": {
    "dev": "rollup -c --watch",
    "build": "rollup -c --environment NODE_ENV:production",
    "ncu": "npx npm-check-updates -u"
  },
  "devDependencies": {
    "@babel/core": "^7.18.2",
    "@babel/preset-env": "^7.18.2",
    "@rbnlffl/rollup-plugin-eslint": "^3.0.0",
    "@rollup/plugin-babel": "^5.3.1",
    "@rollup/plugin-eslint": "^8.0.2",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "autoprefixer": "^10.4.7",
    "cssnano": "^5.1.11",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.2.2",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "glob": "^8.0.3",
    "lint-staged": "^13.0.1",
    "postcss": "^8.4.14",
    "postcss-import": "^14.1.0",
    "prettier": "^2.6.2",
    "rollup": "2.75.6",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-terser": "^7.0.2",
    "tailwindcss": "^3.1.2"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js}": [
      "vue-cli-service lint",
      "git add"
    ]
  },
  "config": {
    "posts_per_page": 25,
    "image_sizes": {
      "xxs": {
        "width": 30
      },
      "xs": {
        "width": 100
      },
      "s": {
        "width": 300
      },
      "m": {
        "width": 600
      },
      "l": {
        "width": 1000
      },
      "xl": {
        "width": 2000
      }
    },
    "card_assets": true,
    "custom": {
      "主题风格": {
        "type": "select",
        "options": [
          "明亮",
          "黑暗",
          "自动"
        ],
        "default": "自动"
      }
    }
  }
}
