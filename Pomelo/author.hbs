{{!< default}}
{{!-- The tag above means: insert everything in this file
into the {body} of the default.hbs template --}}

{{!--Special header-background.hbs partial to generate the background image--}}
{{#if @site.cover_image}}
  <section class="pomelo-hero">
    {{#author}}
      {{> "site-hero" backgroundImage=cover_image}}
      <div class="pomelo-hero-content">
        {{!-- This is a responsive image, it loads different sizes depending on device
        https://medium.freecodecamp.org/a-guide-to-responsive-images-with-ready-to-use-templates-c400bd65c433 --}}
        {{#if profile_image}}
          <img src="{{img_url profile_image size="xs"}}" class="rounded-full w-24 h-24 mx-auto border-2 border-solid border-gray-300" alt="{{name}}" />
        {{/if}}
        <h1 class="pomelo-hero-content-title">{{name}}</h1>
        <div class="mt-2 text-lg font-light">{{bio}}</div>
        <div class="mt-2 text-base">
          {{plural ../pagination.total empty='没有任何作品' singular='% 篇文章' plural='% 篇文章'}}
        </div>
      </div>
    {{/author}}
  </section>
{{/if}}

{{!-- The main content area --}}
<main class="site-posts-list">
  <div class="container px-4 xl:px-10">
    <div class="post-card-list">
      {{#foreach posts}}
      {{!-- The tag below includes the markup for each post - partials/post-card.hbs --}}
        {{> "post-card"}}
      {{/foreach}}
    </div>
  </div>
</main>

{{pagination}}

{{> "site-to-top"}}
