{{!< default}}

{{!-- The tag above means: insert everything in this file
into the {body} tag of the default.hbs template --}}

{{#post}}

  {{!--Special header-background.hbs partial to generate the background image--}}
  {{#if feature_image}}
    <section class="pomelo-hero">
      {{> "site-hero" backgroundImage=feature_image}}
    </section>
  {{/if}}


  {{!-- The main content area --}}
  <main class="site-posts-main pt-[var(--header-height)] dark:bg-slate-800">
    <div class="container px-4 md:px-10">
      <article class="pb-12">
        {{> "post-title"}}
        <div class="grid grid-cols-12 gap-4">
          <div class="col-span-12 md:col-span-10">
            {{> "post-content"}}
          </div>
          <div class="col-span-2 hidden md:block relative">
            <div class="pomelo-article-toc event-article-toc"></div>
          </div>
        </div>
      </article>
      {{> "post-copyright"}}
    </div>
    {{> "post-divider"}}
    {{> "post-comments"}}
    {{> "post-read-more"}}
  </main>

  {{> "post-to-top"}}
{{/post}}
