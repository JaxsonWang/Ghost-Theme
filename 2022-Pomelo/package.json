{
  "name": "pomelo",
  "description": "a ghost theme",
  "keywords": [
    "ghost",
    "theme",
    "ghost-theme"
  ],
  "engines": {
    "ghost": ">=5.0.0"
  },
  "version": "0.0.1",
  "license": "MIT",
  "author": {
    "name": "Jaxson Wang",
    "email": "i@iiong.com",
    "url": "https://iiong.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/JaxsonWang/Ghost-Theme/tree/master/2022-Pomelo"
  },
  "screenshots": {
    "desktop": "assets/screenshot-desktop.jpg",
    "mobile": "assets/screenshot-mobile.jpg"
  },
  "browserslist": [
    "defaults"
  ],
  "scripts": {
    "dev:js": "rollup -c -w",
    "dev:css": "postcss src/css/index.css -o src/app.css -w",
    "dev:server": "browser-sync src --files \"src/**/*, !src/css/**, !src/js/**\" --no-open --no-notify",
    "prod:server": "browser-sync dist --no-open --no-notify --no-ghost-mode",
    "build:pre:js": "rollup -c --environment NODE_ENV:production",
    "build:pre:css": "postcss src/css/index.css -o dist/app.css --env production",
    "build:post:copy": "cp src/index.html dist/index.html",
    "build": "rimraf dist && concurrently npm:build:pre:* && concurrently npm:build:post:*",
    "start": "concurrently --kill-others npm:dev:*",
    "production": "npm run build && npm run prod:server",
    "ncu": "npx npm-check-updates -u"
  },
  "devDependencies": {
    "@babel/core": "^7.18.2",
    "@rollup/plugin-babel": "^5.3.1",
    "@rollup/plugin-eslint": "^8.0.2",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "autoprefixer": "^10.4.7",
    "browser-sync": "2.27.10",
    "concurrently": "7.2.1",
    "cssnano": "^5.1.11",
    "eslint": "^8.17.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.2.2",
    "eslint-plugin-promise": "^6.0.0",
    "postcss": "^8.4.14",
    "postcss-cli": "9.1.0",
    "postcss-import": "^14.1.0",
    "rimraf": "^3.0.2",
    "rollup": "2.75.6",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-terser": "^7.0.2",
    "tailwindcss": "^3.1.2"
  },
  "config": {
    "posts_per_page": 25,
    "image_sizes": {
      "xxs": {
        "width": 30
      },
      "xs": {
        "width": 100
      },
      "s": {
        "width": 300
      },
      "m": {
        "width": 600
      },
      "l": {
        "width": 1000
      },
      "xl": {
        "width": 2000
      }
    }
  }
}
