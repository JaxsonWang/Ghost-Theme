<div class="site-pagination">
  <div class="d-none" aria-hidden="true">
    <span class="curr-page">{{page}}</span>
    <span class="total-pages">{{pages}}</span>
  </div>
  <nav aria-label="文章分页">
    <ul class="pagination">
      {{#if prev}}
        <li class="page-item">
          <a class="page-link" href="{{page_url prev}}" aria-label="上一页" title="上一页">
            <span aria-hidden="true">
              <i class="fas fa-angle-left"></i>
            </span>
          </a>
        </li>
      {{/if}}
      {{#if next}}
        <li class="page-item">
          <a class="page-link" href="{{page_url next}}" aria-label="下一页" title="下一页">
            <span aria-hidden="true">
              <i class="fas fa-angle-right"></i>
            </span>
          </a>
        </li>
      {{/if}}
    </ul>
  </nav>
</div>
