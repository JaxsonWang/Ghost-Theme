{{!-- Everything inside the #author tags pulls data from the author --}}
{{#primary_author}}
    <div class="post-footer d-flex justify-content-between align-items-center">
        <section class="author-card d-flex justify-content-between align-items-center">
          {{#if profile_image}}
              <img class="author-profile-image" src="{{img_url profile_image size="xs"}}" alt="{{name}}" />
          {{else}}
              <span class="avatar-wrapper">{{> "icons/avatar"}}</span>
          {{/if}}
            <section class="author-card-content">
                <h4 class="author-card-name"><a href="{{url}}">{{name}}</a></h4>
              {{#if bio}}
                  <p>{{bio}}</p>
              {{else}}
                  <p>阅读此作者的<a href="{{url}}">更多文章</a></p>
              {{/if}}
            </section>
        </section>
        <div class="post-footer-right">
            <a class="author-card-button" href="{{url}}">更多文章</a>
        </div>
    </div>
{{/primary_author}}
