{{!-- 文章列表的每个文章展示元素 --}}
<article class="col-12 col-md-6 col-xl-4 {{post_class}} post-item">
  <div class="ha__main-post-item ha__main-post-item-normal h-100 card border-0 shadow rounded overflow-hidden">
    <img class="card-img-top"
         srcset="{{img_url feature_image size="s"}} 300w,
                    {{img_url feature_image size="m"}} 600w,
                    {{img_url feature_image size="l"}} 1000w,
                    {{img_url feature_image size="xl"}} 2000w"
         sizes="(max-width: 1000px) 400px, 700px"
         src="{{img_url feature_image size="m"}}"
         alt="{{title}}"
    />
    <div class="card-post-meta">
      {{!--todo: 多个作者存在--}}
      {{#primary_author}}
        <a href="{{url}}" class="card-post-meta-author-link">
          <img data-bs-toggle="tooltip"
               data-bs-placement="top"
               title="{{name}}"
               src="{{img_url profile_image size="xs"}}"
               class="rounded-circle card-post-meta-author"
               alt="{{name}}"
          />
        </a>
      {{/primary_author}}
    </div>
    <div class="card-body">
      {{!--todo: 标签非空判断--}}
      {{#primary_tag}}
        <div class="card-post-meta-tag mb-3">
          <a href="{{url}}" class="tag-name">{{name}}</a>
        </div>
      {{/primary_tag}}
      <h5 class="card-title mb-3">{{title}}</h5>
      <p class="card-text mb-5">{{excerpt}}</p>
      <div class="card-time">
        <time class="date-time" datetime="{{date format="YYYY-MM-DD"}}">{{date format="YYYY年MM月DD日"}}</time>
        <span class="break mx-1">•</span>
        <span class="read-time">{{reading_time minute=(t "1 分钟阅读") minutes=(t "% 分钟阅读")}}</span>
      </div>
      <a href="{{url}}" class="stretched-link"></a>
    </div>
  </div>
</article>
